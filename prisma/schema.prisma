generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("UWAJUDGE_DATABASE_URL")
}

model Permission {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  userGroups  UserGroup[]
  users       User[]
}

model User {
  email       String       @id
  username    String
  permissions Permission[]
}

model UserGroup {
  id          Int          @id @default(autoincrement())
  name        String
  description String?
  permissions Permission[]
}

model Assignment {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  problems    Problem[]
}

model Problem {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  assignment  Assignment[]
}

model Submission {
  id          Int     @id @default(autoincrement())
}

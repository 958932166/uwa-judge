generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("UWAJUDGE_DATABASE_URL")
}

model Permission {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  userGroups  UserGroup[]
  users       User[]
}

model User {
  email       String       @id
  username    String
  permissions Permission[]
}

model UserGroup {
  id          Int          @id @default(autoincrement())
  name        String
  description String?
  permissions Permission[]
}

model Assignment {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  problems ProblemsOnAssignments[]
}

model Problem {
  id          String  @id // External ID in domjudge. also hash value of the archive file
  name        String
  description String?
  assignments ProblemsOnAssignments[]
}

model ProblemsOnAssignments {
  problemId    String
  assignmentId Int
  problem      Problem    @relation(fields: [problemId], references: [id])
  assignment   Assignment @relation(fields: [assignmentId], references: [id])
  @@id([problemId, assignmentId])
}

model Submission {
  id Int @id @default(autoincrement())
}
